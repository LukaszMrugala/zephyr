config SOC_FAMILY_INTEL_ISH
	select X86
	select X86_NO_SPECULATIVE_VULNERABILITIES
	select IOAPIC
	select LOAPIC
	select CPU_HAS_FPU
	select CPU_HAS_DCACHE
	select INTEL_HAL
	select HAS_PM if !BOARD_INTEL_ISH_5_4_1_SIMICS && !BOARD_INTEL_ISH_5_8_0_SIMICS
	select HAS_COVERAGE_SUPPORT
	select SOC_EARLY_INIT_HOOK
